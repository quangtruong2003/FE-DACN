<resources>


    <style name="MyTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/orange</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/orange</item>
        <item name="tabTextColor">@color/mediumText</item>
        <item name="android:background">@color/appBackground</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/mediumText</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/darkText</item>
        <item name="android:textColorHint">@color/mediumText</item>
        <item name="closeIcon">@drawable/ic_close</item>
    </style>
    <style name="NavItemShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>