<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Gradient Circle (Fading Border) -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="60dp"
                android:startColor="#00CCFFCC"
                android:endColor="#1DE4FFE4" />
            <size
                android:width="120dp"
                android:height="120dp" />
        </shape>
    </item>

    <!-- Inner Solid Circle -->
    <item
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp">
        <shape android:shape="oval">
            <solid android:color="#CCFFCC" />
        </shape>
    </item>

    <!-- Check Icon -->
    <item
        android:drawable="@drawable/ic_check"
        android:bottom="30dp"
        android:left="30dp"
        android:right="30dp"
        android:top="30dp" />
</layer-list>