<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">

    <ImageView
        android:id="@+id/iv_success"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_check_circle" />

    <TextView
        android:id="@+id/tv_congrats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Congratulations!!!"
        android:textColor="@color/darkText"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_order_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Your order have been taken and is being attended to"
        android:textColor="@color/darkText"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_track_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/orange"
        android:text="Track order"
        android:textColor="@android:color/white"
        app:cornerRadius="8dp" />

    <Button
        android:id="@+id/btn_continue_shopping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_continue_shopping_background"
        android:text="Continue shopping"
        android:textColor="@color/orange"
        android:textAllCaps="false"/>

</LinearLayout>